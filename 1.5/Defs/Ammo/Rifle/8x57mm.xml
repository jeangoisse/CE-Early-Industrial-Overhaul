		<statBases>
			<Mass>0.028</Mass>
			<Bulk>0.03</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo8x57mm</li>
		</thingCategories>
	</ThingDef>

